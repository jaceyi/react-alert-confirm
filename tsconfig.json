{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "sourceMap": false,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
