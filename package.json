{
  "name": "react-alert-confirm",
  "version": "4.0.2",
  "description": "A react component confirm dialog, support synchronous mode call.（一个 React 确认对话框组件，支持同步方式调用。）",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "git@github.com:jaceyi/react-alert-confirm.git",
  "homepage": "https://github.com/jaceyi/react-alert-confirm",
  "author": "Jace Yi <yijinchun@outlook.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "dialog",
    "confirm",
    "react-alert-confirm"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "lib/"
  ],
  "scripts": {
    "build": "yarn build:es && yarn build:type && yarn build:style",
    "build:ts": "yarn build:es && yarn build:type",
    "build:es": "babel src --out-dir lib --extensions '.ts,.tsx'",
    "build:type": "tsc --emitDeclarationOnly",
    "build:style": "sass --no-source-map src/index.scss lib/style.css",
    "watch": "onchange 'src/**/*.ts' 'src/**/*.tsx' 'src/index.scss' -- yarn build",
    "watch:ts": "onchange 'src/**/*.ts' 'src/**/*.tsx' -- yarn build:ts",
    "watch:style": "onchange 'src/index.scss' -- yarn build:style",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,scss,css}'",
    "lint": "eslint 'src/**/*.{ts,tsx}' --quiet --fix",
    "test": "jest",
    "_link": "yarn build && yarn link",
    "_uplink": "yarn unlink && yarn _link"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.1",
    "@types/react": "18.0.23",
    "@types/react-dom": "18.0.7",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "babel-jest": "^29.2.2",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.3.1",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.55.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  }
}
